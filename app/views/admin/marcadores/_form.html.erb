<%= simple_form_for [:admin, @marcador], :html => { :class => 'form-vertical' } do |f| %>
  	
  <div class="form-inputs">
  	<%= f.input :nome %>
  </div>
  
  	
  <div class="form-actions">
	  <%= f.button :submit, :class => 'btn-primary' %>
	  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
	                admin_marcadores_path, :class => 'btn btn-default' %>
  </div>
<% end %>
